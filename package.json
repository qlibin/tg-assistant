{
  "name": "typescript-junie-project",
  "version": "1.0.0",
  "description": "TypeScript project configured for Junie Agent in IntelliJ IDEA",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc && node scripts/fix-imports.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "type-check": "tsc --noEmit",
    "audit": "npm audit --audit-level moderate",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "validate": "npm run build && npm run lint && npm run format:check && npm run type-check && npm run test",
    "dist": "npm run build && cp package.json package-lock.json dist/ && cd dist && npm install --production --ignore-scripts",
    "package:lambda": "npm run build && cp package.json package-lock.json dist/ && cd dist && npm install --production --ignore-scripts && zip -r ../lambda.zip ."
  },
  "keywords": [
    "typescript",
    "junie-agent",
    "intellij"
  ],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.971.0",
    "dotenv": "^17.2.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:coverage"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
