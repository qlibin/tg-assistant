#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Root project checks
echo "🔍 Running pre-commit checks..."

# Type check
echo "📝 Running TypeScript compiler..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ TypeScript compilation failed"
  exit 1
fi

# Lint and fix
echo "🔧 Running ESLint..."
npm run lint:fix
if [ $? -ne 0 ]; then
  echo "❌ ESLint checks failed"
  exit 1
fi

# Format code
echo "🎨 Running Prettier..."
npm run format
if [ $? -ne 0 ]; then
  echo "❌ Code formatting failed"
  exit 1
fi

# Run tests with coverage
echo "🧪 Running tests with coverage..."
npm run test:coverage
if [ $? -ne 0 ]; then
  echo "❌ Tests failed or coverage below threshold"
  exit 1
fi

# Security audit
echo "🔒 Running security audit..."
npm run audit
if [ $? -ne 0 ]; then
  echo "❌ Security audit found issues"
  exit 1
fi

# Infrastructure guardrails
if [ ! -d "infrastructure" ]; then
  echo "❌ 'infrastructure' directory not found at repo root"
  exit 1
fi

echo "🏗 Running infrastructure guardrails..."
cd infrastructure || { echo "❌ Failed to enter infrastructure directory"; exit 1; }

# Build
echo "▶ Build (infrastructure)"
npm run --silent build
if [ $? -ne 0 ]; then
  echo "❌ Build failed (infrastructure)"
  exit 1
fi

# Type-check
echo "▶ Type-check (infrastructure)"
npm run --silent type-check
if [ $? -ne 0 ]; then
  echo "❌ Type-check failed (infrastructure)"
  exit 1
fi

# Lint
echo "▶ Lint (infrastructure)"
npm run --silent lint
if [ $? -ne 0 ]; then
  echo "❌ Lint failed (infrastructure)"
  exit 1
fi

# Format check
echo "▶ Format check (infrastructure)"
npm run --silent format:check
if [ $? -ne 0 ]; then
  echo "❌ Format check failed (infrastructure)"
  exit 1
fi

# Tests
echo "▶ Tests (infrastructure)"
npm run --silent test
if [ $? -ne 0 ]; then
  echo "❌ Tests failed (infrastructure)"
  exit 1
fi

# If everything passed
echo "✅ All pre-commit checks passed, including infrastructure guardrails!"
